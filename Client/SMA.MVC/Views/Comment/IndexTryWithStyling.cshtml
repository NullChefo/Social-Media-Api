@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

@if (!Model.Any())
{
    <span class="alert-info">No posts</span>
}
else
{


    @foreach (var item in Model)
    {


        <div class="card">
            <img src="@item.ImageId" class="card-img-top" alt="..." /> <!--make to find the path to image--->
            <div class="card-body">
                <h5 class="card-title">@item.CreatedByUserId</h5> <!--Find Firs & Last Name-->
                <p class="card-text">
                    @item.PostBody
                </p>
                <a href="#!" class="btn btn-primary">Likes</a>
                <a href="#!" class="btn btn-primary">Comments</a>
                <a href="@Html.ActionLink("Delete", "Delete", new { id = item.PostId })" class="btn btn-primary">Delete</a>
            </div>
        </div>


        <div class="card" style="width: 18rem">
            <img src="@item.ImageId"
                 class="card-img-top"
                 alt="..." />
            <div class="card-body">
                <h5 class="card-title">@item.CreatedByUserId</h5>
                <p class="card-text">
                    @item.PostBody
                </p>
            </div>



            <ul class="list-group list-group-flush">
                <li class="list-group-item"> </li>
                <li class="list-group-item">
                    <a href="#!" class="btn btn-primary">Likes</a>
                    <a href="#!" class="btn btn-primary">Comments</a>
                    <a href="@Html.ActionLink("Delete", "Delete", new { id = item.PostId })" class="btn btn-primary">Delete</a>
                </li>
                <li class="list-group-item"> </li>
            </ul>
            <div class="card-body">
                <ul class="list-group list-group-flush">

                    <li class="list-group-item">Cras justo odio</li>



                </ul>
            </div>
        </div>





    }





}