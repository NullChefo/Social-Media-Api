@using Microsoft.AspNetCore.Http;
@model SMA.MVC.ViewModels.LikeVM

@{
    ViewBag.Title = "Delete";
}

<center><h2>Delete</h2> </center>

<h3>Are you sure you want to delete this like?</h3>
<div>
    <h4>Like</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            <p>LikeId:@Html.DisplayNameFor(model => model.LikeId)</p>

            <p>PostId:  @Html.DisplayNameFor(model => model.PostId)</p>
        </dt>

        <dd>
            <p>Created by:@Html.DisplayNameFor(model => model.CreatedByUserId)</p>

        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">

            @(Model.CreatedByUserId == Int32.Parse( Context.Session.GetString("UserId")) ? "Delete" : " ")
            <input type="submit" value=@(Model.CreatedByUserId == Int32.Parse( Context.Session.GetString("UserId")) ? "Delete" : " ") class="btn btn-danger" /> |
            @Html.ActionLink("Back to List", "Index")
        </div>
    }
</div>